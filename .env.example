# Kalshi API Credentials (REQUIRED)
KALSHI_API_KEY=your_kalshi_api_key_here
KALSHI_API_SECRET=your_kalshi_api_secret_here
KALSHI_SANDBOX=false  # Set to true for testing with sandbox

# AI Model API Keys
OPENAI_API_KEY=sk-your-openai-key-here  # REQUIRED - GPT-4 for probability modeling

# Optional: Anthropic Claude (for ensemble mode - better accuracy)
# If not provided, bot will use OpenAI only (still works great!)
ANTHROPIC_API_KEY=  # OPTIONAL - Leave empty to use OpenAI only

# AI Model Configuration
PROBABILITY_MODEL_ENSEMBLE=auto  # auto (use if Anthropic key provided), true, false
GPT_MODEL_WEIGHT=0.55              # Weight for GPT-4 in ensemble (ignored if no Claude)
CLAUDE_MODEL_WEIGHT=0.45           # Weight for Claude in ensemble (ignored if no Claude)
MODEL_TEMPERATURE=0.3              # Lower = more deterministic
MODEL_MAX_TOKENS=1000              # Max tokens per model response

# Database Configuration
DATABASE_URL=postgresql://kalshi_user:kalshi_password@postgres:5432/kalshi_db
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=

# Monitoring & Alerts (OPTIONAL)
DISCORD_WEBHOOK_URL=  # OPTIONAL - Leave empty to disable Discord alerts
PROMETHEUS_PORT=9090

# Trading Parameters
INITIAL_BANKROLL=50.0              # Starting capital in USD
MAX_RISK_PER_TRADE=1.0             # Maximum risk per individual trade ($)
MAX_TOTAL_RISK=10.0                # Maximum total simultaneous risk ($)
MAX_CORRELATED_RISK=6.0            # Maximum risk in single category ($)
MAX_DAILY_LOSS=5.0                 # Maximum daily loss before trading stops ($)
FRACTIONAL_KELLY=0.25              # Kelly fraction (0.25 = 1/4 Kelly, safer)
MIN_EDGE=0.05                      # Minimum edge required to trade (5% = 0.05)
MAX_POSITIONS=10                   # Maximum concurrent open positions
DRAWDOWN_CIRCUIT_BREAKER=0.20      # Pause trading at 20% drawdown from peak

# Feature Flags
LIVE_TRADING=false                 # CRITICAL: Set to false for paper trading!
AUTO_DEPOSIT_PROFITS=false         # Auto-reinvest profits (careful with leverage)
ENABLE_MARKET_MAKING=false         # Enable market-making strategies
BACKTEST_MODE=false                # Backtesting mode (no live trades)

# Data Sources & APIs (OPTIONAL - for enhanced context)
NEWSAPI_KEY=  # OPTIONAL - Leave empty to disable news data
MARKETAUX_API_KEY=  # OPTIONAL
THE_ODDS_API_KEY=  # OPTIONAL

# Market Scanning
SCAN_INTERVAL=300                  # Scan for new markets every N seconds (300 = 5 min)
MARKET_AGE_FILTER_MIN_DAYS=1       # Minimum days until market close
MARKET_AGE_FILTER_MAX_DAYS=30      # Maximum days until market close
MIN_MARKET_VOLUME_24H=50           # Minimum 24h volume to qualify

# Risk Management
CORRELATION_THRESHOLD=0.70         # Semantic similarity threshold for blocking trades
UNCERTAINTY_ADJUSTMENT=true        # Adjust fair value by model confidence
RISK_CHECK_FREQUENCY=60            # Check risk limits every N seconds

# Logging
LOG_LEVEL=INFO                     # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=/app/logs/trading_bot.log
LOG_TO_STDOUT=true
LOG_MAX_SIZE_MB=100
LOG_BACKUP_COUNT=5

# Performance Tuning
WEBSOCKET_RECONNECT_ATTEMPTS=5     # Reconnect attempts before giving up
WEBSOCKET_RECONNECT_DELAY=5        # Delay between reconnect attempts (seconds)
API_RATE_LIMIT_BUFFER=0.8          # Leave 20% buffer for rate limits
BATCH_PROCESS_SIZE=50              # Process N markets per batch

# Docker Compose
COMPOSE_PROJECT_NAME=kalshi_trading_bot
COMPOSE_FILE=docker-compose.yml
